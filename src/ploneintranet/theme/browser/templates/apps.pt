<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ploneintranet">

  <body class="view-secure">
    <metal:content fill-slot="content">

        <div class="row tiles apps pat-masonry" data-pat-masonry="column-width: .grid-sizer; gutter: 0; item-selector: .tile;">
          <div class="grid-sizer"></div>

          <tal:r repeat="app view/apps">
            <div class="tile app app-news"
                 tal:attributes="class string:tile app app-${app/class}">
              <a href="/news" class="link"
                 tal:attributes="href app/url">
                <img class="icon" src="/apps/news/icon.svg" alt=""
                  tal:attributes="src app/icon" />
                <h3 tal:content="app/title">News Publiher</h3>
              </a>
            </div>
          </tal:r>
        </div>

    </metal:content>
  </body>
</html>
